{
  "name": "react-stack",
  "version": "0.0.1",
  "private": true,
  "description": "An isomorphic web app boilerplate (Node.js, Express, GraphQL, React.js, Babel 6, PostCSS, Webpack, Browsersync)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonirrings/react-stack.git"
  },
  "keywords": [
    "react",
    "stack"
  ],
  "author": "Jonir Rings",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jonirrings/react-stack/issues"
  },
  "homepage": "https://github.com/jonirrings/react-stack#readme",
  "engines": {
    "node": ">=6.5",
    "npm": ">=3.10"
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.1",
    "classnames": "^2.2.5",
    "connect-mongodb-session": "^1.3.0",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.4.1",
    "dataloader": "^1.2.0",
    "draft-js": "^0.10.0",
    "express": "^4.15.2",
    "express-graphql": "^0.6.4",
    "express-jwt": "^5.3.0",
    "express-session": "^1.14.1",
    "fastclick": "^1.0.6",
    "graphiql": "^0.11.2",
    "graphql": "^0.10.5",
    "graphql-relay": "^0.5.1",
    "immutable": "^3.8.1",
    "isomorphic-relay": "^0.7.3",
    "isomorphic-relay-router": "^0.8.4",
    "isomorphic-style-loader": "^3.0.0",
    "jsonwebtoken": "^7.3.0",
    "mongoose": "^4.9.5",
    "node-fetch": "^1.6.3",
    "normalize.css": "^7.0.0",
    "passport": "^0.3.2",
    "passport-github2": "^0.1.10",
    "pretty-error": "^2.1.0",
    "prop-types": "^15.5.6",
    "query-string": "^5.0.0",
    "react": "^15.5.3",
    "react-dom": "^15.5.3",
    "react-relay": "^1.1.0",
    "react-router": "^4.1.2",
    "rxjs": "^5.3.0",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "source-map-support": "^0.4.11",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-rewire": "^1.1.0",
    "babel-preset-env": "^1.3.3",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "babel-relay-plugin": "^0.11.0",
    "babel-relay-plugin-loader": "^0.11.0",
    "babel-template": "^6.24.1",
    "babel-types": "^6.24.1",
    "browser-sync": "^2.18.8",
    "chai": "^4.1.0",
    "chokidar": "^1.6.1",
    "css-loader": "^0.28.0",
    "editorconfig-tools": "^0.1.1",
    "enzyme": "^2.8.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-css-modules": "^2.7.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.1.0",
    "file-loader": "^0.11.1",
    "front-matter": "^2.1.2",
    "glob": "^7.1.1",
    "json-loader": "^0.5.4",
    "lint-staged": "^4.0.2",
    "markdown-it": "^8.3.1",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "pixrem": "^4.0.1",
    "pleeease-filters": "^4.0.0",
    "postcss": "^6.0.8",
    "postcss-calc": "^6.0.0",
    "postcss-color-function": "^4.0.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^6.1.0",
    "postcss-custom-selectors": "^4.0.1",
    "postcss-flexbugs-fixes": "^3.0.0",
    "postcss-global-import": "^1.0.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-media-minmax": "^3.0.0",
    "postcss-nested": "^2.1.0",
    "postcss-nesting": "^4.0.1",
    "postcss-pseudoelements": "^5.0.0",
    "postcss-selector-matches": "^3.0.1",
    "postcss-selector-not": "^3.0.1",
    "pre-commit": "^1.2.2",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.5.1",
    "react-deep-force-update": "^2.0.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "redbox-react": "^1.3.6",
    "rimraf": "^2.6.1",
    "sinon": "^2.1.0",
    "stylefmt": "^6.0.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "url-loader": "^0.5.8",
    "webpack": "^3.4.1",
    "webpack-bundle-analyzer": "^2.3.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.18.0",
    "write-file-webpack-plugin": "^4.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "stage-2",
      "react"
    ],
    "env": {
      "test": {
        "plugins": [
          "rewire"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "plugin:css-modules/recommended"
    ],
    "plugins": [
      "css-modules"
    ],
    "globals": {
      "__DEV__": true
    },
    "env": {
      "browser": true
    },
    "rules": {
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off",
      "react/jsx-filename-extension": "off",
      "react/prefer-stateless-function": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "metadata": {
    "graphql": {
      "schema": "cache/schema.json"
    }
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.{cmd,html,json,md,sh,txt,xml,yml}": [
      "editorconfig-tools fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,less,scss,sss}": [
      "stylefmt",
      "stylelint",
      "git add"
    ]
  },
  "scripts": {
    "update-schema": "babel-node tools/run updateSchema",
    "lint:js": "eslint src tools --fix",
    "lint:css": "stylelint \"src/**/*.{css,less,scss,sss}\"",
    "lint:staged": "lint-staged",
    "lint": "yarn run lint:js && yarn run lint:css",
    "test": "mocha \"src/**/*.test.js\" --require babel-register --require test/setup.js",
    "test:watch": "yarn run test -- --reporter min --watch",
    "clean": "babel-node tools/run clean",
    "copy": "babel-node tools/run copy",
    "bundle": "babel-node tools/run bundle",
    "build": "babel-node tools/run build",
    "build:stats": "yarn run build -- --release --analyse",
    "deploy": "babel-node tools/run deploy",
    "serve": "babel-node tools/run runServer",
    "start": "babel-node tools/run start"
  }
}
